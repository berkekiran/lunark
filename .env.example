# Database
# Generate secure password: node -e "console.log(require('crypto').randomBytes(24).toString('base64').replace(/[+/=]/g, 'x'))"
POSTGRES_USER=lunark
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=lunark
# For local: localhost:5432 | For Docker: postgres:5432
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}"

# Server
PORT=4545
NODE_ENV=development
APP_URL=http://localhost:3010

# API Keys
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=YOUR_API_KEY_HERE
ADMIN_API_KEY=YOUR_ADMIN_API_KEY_HERE

# OpenAI (via Astreus)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# JWT_SECRET should be 64+ hex characters
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_LONG_JWT_SECRET_HERE

# Astreus Encryption (for database field encryption)
# Generate master key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_ENABLED=true
ENCRYPTION_MASTER_KEY=YOUR_ENCRYPTION_MASTER_KEY_HERE
ENCRYPTION_ALGORITHM=aes-256-gcm